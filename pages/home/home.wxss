/* pages/home/home.wxss */

.header {
  width: 100%;
  height: 400rpx;
  -webkit-box-shadow: 2px 3px 5px #c8c8c8;
  -moz-box-shadow: 2px 3px 5px #c8c8c8;
  box-shadow: 2px 3px 5px #c8c8c8;
  border-bottom: 1px solid #c8c8c8;
  border-radius: 0 0 60px 60px;
  background:white;
  transition: 2s;
}

.header:hover {
   -webkit-transition:  all 2s cubic-bezier(0.68, -0.55, 0.27, 1.55);
  -o-transition: all 2s cubic-bezier(0.68, -0.55, 0.27, 1.55);
  transition: all 2s cubic-bezier(0.68, -0.55, 0.27, 1.55);
  height: 750rpx;
}

.avatar {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.avatar-text {
  font-size: 15px;
  font-weight: 100;
  display: flex;
  flex-direction: column-reverse;
  justify-content: center;
  align-items: center;
}

@keyframes slidup {
  from {
    transform: translateY(100%);
  }

  to {
    transform: translateY(0%);
  }
}

.body {
  margin-top: 50rpx;
}
