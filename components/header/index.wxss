.header{
  position: fixed;
  top:0;
  left: 0;
  width:100%;
  display: flex;
  flex-direction: row;
  height:50px;
  align-items: center;
  justify-content:space-around;
  border-top :1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
   background-color:#FFFFFF ; 
  z-index: 2;
}
.l-like{
  width: 80rpx;
  height:60rpx;
}
.placeholder-view {
  width: 100%;
  height: 100rpx;
  margin-top: 50rpx;
}


.popup{
  width:100%;
  height:100%;
  background-color: white;
}
.no-item{
  margin-top:100rpx; 
